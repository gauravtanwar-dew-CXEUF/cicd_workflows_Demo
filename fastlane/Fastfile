default_platform(:android)

platform :android do
  lane :build_debug do
    gradle(task: "assembleDebug")
  end

  lane :run_tests do
    gradle(task: "testDebug")
  end

  lane :lint_check do
    gradle(task: "lint")
  end

  lane :release_build do
    gradle(task: "assembleRelease")
  end

  lane :all_in_one do
    build_debug
    run_tests
    lint_check
    release_build
  end
end




